@model acct.common.POCO.Order

<div class="form-horizontal">
    <div class="form-group ">
        <div class="editor-label col-md-2">
            @Html.LabelFor(model => model.OrderNumber)
        </div>
        <div class="editor-field col-md-4">
            @Html.EditorFor(model => model.OrderNumber, new { htmlAttributes = new { @class = "form-control" }, })
            @Html.ValidationMessageFor(model => model.OrderNumber)
            @Html.HiddenFor(model => model.OrderType)
        </div>
        <div class="col-md-1">
        </div>
        <div class="editor-label col-md-2">
            @Html.LabelFor(model => model.OrderDate)
        </div>
        <div class="editor-field col-md-3">
            @Html.EditorFor(model => model.OrderDate, "Date")
            @Html.ValidationMessageFor(model => model.OrderDate)
        </div>
    </div>

    <div class="form-group ">
        <div class="editor-label col-md-2">
            @Html.LabelFor(model => model.CustomerId)
        </div>
        <div class="editor-field col-md-4">
            <div class="input-group">
                @Html.DropDownList("CustomerId", (SelectList)ViewBag.CustomerIds, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CustomerId)
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">+</button>
                </span>
                
            </div><!-- /input-group -->
        </div>
        <div class="col-md-1">
        </div>
        <div class="editor-label col-md-2">
            @Html.LabelFor(model => model.GSTRate)
        </div>
        <div class="editor-field col-md-3">
            <div class="input-group">
                @Html.EditorFor(model => model.GSTRate, "G29")
                @Html.ValidationMessageFor(model => model.GSTRate)
                <span class="input-group-addon">%</span>
            </div><!-- /input-group -->
        </div>
    </div>
    <div class="form-group ">
        <div class="editor-label col-md-2">
            @Html.LabelFor(model => model.Remark)
        </div>
        <div class="editor-field col-md-4">
            @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" }, })
            @Html.ValidationMessageFor(model => model.Remark)
        </div>
        <div class="col-md-1">
        </div>
        <div class="editor-label col-md-2">

        </div>
        <div class="col-md-3">

        </div>
    </div>
</div>

