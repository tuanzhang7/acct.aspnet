@model IEnumerable<acct.common.POCO.Salesman>

@{
    ViewBag.Title = "Salesman List";
    
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr id='row@(item.Id)'>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            <a href='#' id='@item.Id' data-url="Salesman" hreflang="delete_href">Delete</a>
        </td>
    </tr>
}

</table>
<p></p>
<a class="button" href='@Url.Action("Create", "Customer")'>New</a>
